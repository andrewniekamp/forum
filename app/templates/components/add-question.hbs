{{yield}}
{{#if addQuestion}}
  <h3>Add a Question</h3>
  <form>
    <div class="form-group">
      {{input value=text placeholder="Question - Example: How do rainbows??"}}
    </div>
    <div class="form-group">
      {{textarea value=notes placeholder="Notes - Example: I know it has to do with light... but how do??"}}
    </div>
    <div class="form-group">
      {{textarea value=author placeholder="Author - Example: ...do you really need an example?"}}
    </div>
    <button {{action 'sendSave'}}></button>
  </form>
  <button {{action 'cancel'}}>Cancel</button>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}

{{yield}}
{{#if addAnswer}}
  <h3>Submit Answer</h3>
  <form>
    <div class="form-group">
      {{textarea class="form-control" value=text placeholder="Answer, like: \"You're on the right track! Light interacts with water in the air to form a spectrum of colorful light!!!! zOMG it's teh bestorz, rite?!!1\""}}
    </div>
    <div class="form-group">
      {{input class="form-control" value=author placeholder="Author - Your name here."}}
    </div>
    <button {{action 'sendSave'}}>Submit Answer</button>
  </form>
  <button {{action 'cancel'}}>Cancel</button>
{{else}}
  <button {{action 'answerFormShow'}}>Add Answer</button>
{{/if}}

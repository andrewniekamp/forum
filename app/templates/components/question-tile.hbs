{{yield}}

<div class="question-padder">
  <div class="question-container">
    <div class="row">
      <div class="col-xs-12">
        <h2>{{question.author}} asks:</h2>
        <h1>{{question.text}}</h1>
        <h3>{{question.notes}}</h3>
      </div>

    </div>
    <div class="row">
      <div class="col-xs-12">
        {{edit-question question=question editQuestionSave="editQuestionSave"}}
      </div>
    </div>
  </div>
</div>

{{#each question.answers as |answer|}}
  <div class="answer-container row">
    <div class="row">
      <div class="col-xs-2 arrow-container">
        <span class="glyphicon glyphicon-share-alt reply-arrow" aria-hidden="true"></span>
      </div>
      <div class="answer-text-container col-xs-10">
        <div class="col-xs-9">
          <p class="answer-text">{{answer.text}}</p>
        </div>
        <div class="col-xs-3">
          <button class="btn destroy-btn" {{action 'sendDeleteAnswer' answer}}>CENSOR</button>
        </div>
        <div class="row">
          <div class="col-xs-12 center">
            <button class="btn destroy-btn mobile-btn" {{action 'sendDeleteAnswer' answer}}>CENSOR</button>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-2 arrow-container">
        <!-- Leave this empty -->
      </div>
      <div class="col-xs-10 answer-row">
        <p class="answer-text">- {{answer.author}}</p>
      </div>
    </div>
  </div>
{{/each}}

{{yield}}

<div class="question-container row">
  <div class="col-xs-9">
    <h4>{{question.author}} asks:</h4>
    <h3>{{question.text}}</h3>
    <h5>{{question.notes}}</h5>
  </div>
  <div class="col-xs-3">
    <div class="row">
      <button>Edit</button>
    </div>
    <div class="row">
      <button>Delete</button>
    </div>
  </div>
</div>

{{#each question.answers as |answer|}}
  <div class="answer-container">
    <div class="answer-text-container">
      <p class="answer-text">{{answer.text}}</p>
    </div>
    <p class="answer-author">- {{answer.author}}</p>
  </div>
{{/each}}
